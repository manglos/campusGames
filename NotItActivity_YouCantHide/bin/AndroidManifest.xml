<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="umbrella.magic.youcanthide"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="17" />

    <uses-permission android:name="android.permission.INTERNET" />
    <!-- Permission to access the phone number -->
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="umbrella.magic.youcanthide.Registration"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="umbrella.magic.youcanthide.RegistrationConfirm"
            android:label="@string/title_activity_registration_confirm" >
        </activity>
        <activity
            android:name="umbrella.magic.youcanthide.GameCreation"
            android:label="@string/title_activity_game_creation" >
        </activity>
        <activity
            android:name="umbrella.magic.youcanthide.NewGameConfirm"
            android:label="@string/title_activity_new_game_confirm" >
        </activity>
        <activity
            android:name="umbrella.magic.youcanthide.GameList"
            android:label="@string/title_activity_game_list" >
        </activity>
        <activity
            android:name="umbrella.magic.youcanthide.GameLobby"
            android:label="@string/title_activity_game_lobby" >
        </activity>
        <activity
            android:name="umbrella.magic.youcanthide.NotIt"
            android:label="@string/title_activity_not_it" >
        </activity>
    </application>

</manifest>